<div id="user_form">
    <h2>Change settings</h2>
    <% form_for @user do |f| -%>
    <table border="0" cellspacing="5" cellpadding="5">
        <tr><th colspan=2>Change basic information</th></tr>
        <tr><td class="item_name"><%= f.label :nickname, "Nickname" %></td><td><%= f.text_field :nickname %></td></tr>
        <tr><th colspan=2>Change password *</th></tr>
        <tr><td class="item_name"><%= f.label :password, "Password" %></td><td><%= f.password_field :password %></td></tr>
        <tr><td class="item_name"><%= f.label :password_confirmation, "Password Confirmation" %></td><td><%= f.password_field :password_confirmation %></td></tr>
    </table>
      <%= f.submit "Update", :disable_with => 'Updateing...' %>
      <div class="tips">
        <p>
            * If you don't want to change your password, leave it blank.
        </p>
      </div>
    <% end -%>
</div>